{{~#*inline "title"~}}
  Knotenliste für {{form.email}}
{{~/inline~}}
{{~#*inline "page"}}
  <p>
    {{#each nodes}}
    <span class="node" data-node-id="{{this.node}}">{{this.node}}</span> <a href="action?email={{form.email}}&amp;node={{this.node}}&amp;op=remove">[x]</a><br>
    {{else}}
    Du überwachst bisher keinen Knoten.
    {{/each}}
  </p>
  <form method="get" action="prepare_action">
    <input type="hidden" name="email" value="{{form.email}}">
    <input type="hidden" name="op" value="add">
    Knoten ID: <input type="text" name="node"><br>
    <input type="submit" value="Knoten hinzufügen">
  </form>
{{~/inline}}
{{~> partials/page }}
